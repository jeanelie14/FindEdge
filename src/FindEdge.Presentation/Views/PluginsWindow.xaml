<Window x:Class="FindEdge.Presentation.Views.PluginsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des plugins - FindEdge" 
        Height="600" Width="900"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Gestion des plugins" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="GÃ©rez les plugins pour Ã©tendre les fonctionnalitÃ©s de FindEdge" 
                           FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des plugins -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Plugins disponibles" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="{DynamicResource TextBrush}"/>
                        <Button Content="ðŸ”„ Actualiser" 
                                Command="{Binding LoadPluginsCommand}"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="White"
                                Padding="10,5"
                                Margin="10,0,0,0"
                                BorderThickness="0"
/>
                    </StackPanel>

                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="Tous" Foreground="{DynamicResource TextBrush}">
                            <ListView ItemsSource="{Binding Plugins}" 
                                      Background="Transparent"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource ItemBrush}" 
                                                Margin="2" 
                                                Padding="10" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding Version}" 
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                           Text="{Binding Description}" 
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>

                                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                            Orientation="Horizontal" 
                                                            Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding Type}" 
                                                               FontSize="10"
                                                               Foreground="{DynamicResource AccentBrush}"
                                                               Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding Author}" 
                                                               FontSize="10"
                                                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>

                        <TabItem Header="Parseurs" Foreground="{DynamicResource TextBrush}">
                            <ListView ItemsSource="{Binding ContentParserPlugins}" 
                                      Background="Transparent"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource ItemBrush}" 
                                                Margin="2" 
                                                Padding="10" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding Version}" 
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                           Text="{Binding Description}" 
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>

                        <TabItem Header="Exports" Foreground="{DynamicResource TextBrush}">
                            <ListView ItemsSource="{Binding ExportPlugins}" 
                                      Background="Transparent"
                                      BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource ItemBrush}" 
                                                Margin="2" 
                                                Padding="10" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding Version}" 
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                           Text="{Binding Description}" 
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </Border>

            <!-- DÃ©tails du plugin -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="DÃ©tails du plugin" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="SÃ©lectionnez un plugin pour voir ses dÃ©tails" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               FontStyle="Italic"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Plugins FindEdge" 
                           Foreground="{DynamicResource TextBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="â€¢" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="10,0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
