<Window x:Class="FindEdge.Presentation.Views.IndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion de l'index - FindEdge" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Gestion de l'index de recherche" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Configurez et gérez l'index pour des recherches ultra-rapides" 
                           FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Configuration -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Répertoires à indexer -->
                    <GroupBox Header="Répertoires à indexer" 
                              Margin="0,0,0,15" 
                              Padding="10"
                              Background="{DynamicResource SurfaceBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <ListBox ItemsSource="{Binding IndexedDirectories}" 
                                     Height="100"
                                     Background="Transparent"
                                     BorderThickness="0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox x:Name="NewDirectoryTextBox" 
                                         Width="200" 
                                         Margin="0,0,10,0"
                                         Background="{DynamicResource InputBrush}"
                                         Foreground="{DynamicResource TextBrush}"
                                         BorderBrush="{DynamicResource BorderBrush}"/>
                                <Button Content="Ajouter" 
                                        Padding="15,5"
                                        Background="{DynamicResource AccentBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Click="AddDirectory_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Options d'indexation -->
                    <GroupBox Header="Options d'indexation" 
                              Margin="0,0,0,15" 
                              Padding="10"
                              Background="{DynamicResource SurfaceBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <CheckBox Content="Indexer le contenu des fichiers" 
                                      IsChecked="{Binding IndexConfiguration.IndexContent}"
                                      Margin="0,5"
                                      Foreground="{DynamicResource TextBrush}"/>
                            <CheckBox Content="Indexer les métadonnées" 
                                      IsChecked="{Binding IndexConfiguration.IndexMetadata}"
                                      Margin="0,5"
                                      Foreground="{DynamicResource TextBrush}"/>
                            <CheckBox Content="Inclure les fichiers cachés" 
                                      IsChecked="{Binding IndexConfiguration.IncludeHiddenFiles}"
                                      Margin="0,5"
                                      Foreground="{DynamicResource TextBrush}"/>
                            <CheckBox Content="Indexation incrémentale" 
                                      IsChecked="{Binding IndexConfiguration.EnableIncrementalIndexing}"
                                      Margin="0,5"
                                      Foreground="{DynamicResource TextBrush}"/>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Taille max des fichiers :" 
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextBrush}"/>
                                <Slider Grid.Column="1" 
                                        Value="{Binding IndexConfiguration.MaxFileSize}"
                                        Minimum="1024" 
                                        Maximum="104857600" 
                                        Margin="10,0"
                                        TickFrequency="1048576"
                                        TickPlacement="BottomRight"/>
                                <TextBlock Text="{Binding IndexConfiguration.MaxFileSize, StringFormat='{}{0:N0} octets'}" 
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Extensions supportées -->
                    <GroupBox Header="Extensions de fichiers" 
                              Padding="10"
                              Background="{DynamicResource SurfaceBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <TextBlock Text="Extensions indexées :" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding IndexConfiguration.IndexedExtensions, Converter={StaticResource CollectionToStringConverter}}" 
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- Panneau de contrôle -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <!-- Statut de l'index -->
                    <TextBlock Text="Statut de l'index" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Documents :" Grid.Row="0" Grid.Column="0" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding DocumentCount, StringFormat='{}{0:N0}'}" Grid.Row="0" Grid.Column="1" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       HorizontalAlignment="Right"/>

                            <TextBlock Text="Taille :" Grid.Row="1" Grid.Column="0" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding IndexSize, StringFormat='{}{0:N0} octets'}" Grid.Row="1" Grid.Column="1" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       HorizontalAlignment="Right"/>

                            <TextBlock Text="Dernière mise à jour :" Grid.Row="2" Grid.Column="0" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding LastUpdated, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Grid.Row="2" Grid.Column="1" 
                                       Foreground="{DynamicResource TextBrush}" 
                                       HorizontalAlignment="Right"/>

                            <TextBlock Text="Disponible :" Grid.Row="3" Grid.Column="0" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding IsIndexAvailable, Converter={StaticResource BooleanToYesNoConverter}}" Grid.Row="3" Grid.Column="1" 
                                       Foreground="{Binding IsIndexAvailable, Converter={StaticResource BooleanToColorConverter}}" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <!-- Progression -->
                    <StackPanel Visibility="{Binding IsIndexing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Progression" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,5"/>
                        
                        <ProgressBar Value="{Binding ProgressPercentage}" 
                                     Height="20" 
                                     Margin="0,0,0,10"/>
                        
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0}%'}" 
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"/>
                        
                        <TextBlock Text="{Binding CurrentFile}" 
                                   TextWrapping="Wrap"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,5,0,0"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Vitesse :" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding IndexingSpeed, StringFormat='{}{0:F1} doc/s'}" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Temps restant :" 
                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                            <TextBlock Text="{Binding EstimatedTimeRemaining, StringFormat='{}{0:hh\\:mm\\:ss}'}" 
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Boutons d'action -->
                    <StackPanel Margin="0,20,0,0">
                        <Button Content="🔨 Construire l'index" 
                                Command="{Binding BuildIndexCommand}"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,0,10"
                                FontWeight="Bold"/>
                        
                        <Button Content="🔄 Mettre à jour" 
                                Command="{Binding UpdateIndexCommand}"
                                Background="{DynamicResource SecondaryBrush}"
                                Foreground="{DynamicResource TextBrush}"
                                Padding="15,8"
                                Margin="0,0,0,10"/>
                        
                        <Button Content="🗑 Supprimer" 
                                Command="{Binding DeleteIndexCommand}"
                                Background="{DynamicResource ErrorBrush}"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,0,0,10"/>
                        
                        <Button Content="🔄 Actualiser" 
                                Command="{Binding RefreshStatusCommand}"
                                Background="{DynamicResource SecondaryBrush}"
                                Foreground="{DynamicResource TextBrush}"
                                Padding="15,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Index de recherche FindEdge" 
                           Foreground="{DynamicResource TextBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock Text="•" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           Margin="10,0"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource SecondaryTextBrush}" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
