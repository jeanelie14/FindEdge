<Window x:Class="FindEdge.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FindEdge - Recherche de fichiers avancÃ©e" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,15">
            <StackPanel>
                <TextBlock Text="FindEdge" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Recherche de fichiers avancÃ©e avec dÃ©tection de doublons" 
                           FontSize="12" 
                           Foreground="#CCCCCC" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Barre de recherche -->
        <Border Grid.Row="1" Background="#1E1E1E" Padding="20" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#3E3E42"
                         Padding="15,10"
                         FontSize="14"
                         Margin="0,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                          Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Grid.Column="1" 
                        Content="ðŸ” Rechercher" 
                        Command="{Binding SearchCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0"
                        BorderThickness="0"/>

                <Button Grid.Column="2" 
                        Content="â¹ï¸ ArrÃªter" 
                        Command="{Binding StopSearchCommand}"
                        Background="#DC3545"
                        Foreground="White"
                        Padding="20,10"
                        Margin="5,0"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Zone de contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des rÃ©sultats -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tÃªte des rÃ©sultats -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="{Binding SearchResults.Count, StringFormat='{}{0} rÃ©sultat(s) trouvÃ©(s)'}" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="ðŸ—‘ï¸ Effacer" 
                                        Command="{Binding ClearResultsCommand}"
                                        Background="#6C757D"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="5,0"
                                        BorderThickness="0"/>
                                <Button Content="ðŸ“Š Exporter CSV" 
                                        Command="{Binding ExportCsvCommand}"
                                        Background="#28A745"
                                        Foreground="White"
                                        Padding="10,5"
                                        Margin="5,0"
                                        BorderThickness="0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Liste des rÃ©sultats -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding SearchResults}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        Margin="5" 
                                        Padding="15" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"
                                                   Foreground="White"/>
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding FilePath}" 
                                                   FontSize="11"
                                                   Foreground="#CCCCCC"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5,0,0"/>
                                        <StackPanel Grid.Row="2" Grid.Column="0" 
                                                    Orientation="Horizontal" 
                                                    Margin="0,5,0,0">
                                            <TextBlock Text="{Binding FileSize, StringFormat='Taille: {0:N0} octets'}" 
                                                       FontSize="10"
                                                       Foreground="#CCCCCC"
                                                       Margin="0,0,15,0"/>
                                            <TextBlock Text="{Binding LastModified, StringFormat='ModifiÃ©: {0:dd/MM/yyyy HH:mm}'}" 
                                                       FontSize="10"
                                                       Foreground="#CCCCCC"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                   Text="{Binding MatchType}"
                                                   FontSize="10"
                                                   Foreground="#007ACC"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- SÃ©parateur -->
            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch"/>

            <!-- Panneau latÃ©ral -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tÃªte du panneau -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <TextBlock Text="Outils" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>

                    <!-- Boutons d'outils -->
                    <StackPanel Grid.Row="1" Margin="15">
                        <Button Content="ðŸ“ Index" 
                                Command="{Binding OpenIndexWindowCommand}"
                                Background="#FF8C00"
                                Foreground="White"
                                Padding="15,10"
                                Margin="0,0,0,10"
                                BorderThickness="0"/>

                        <Button Content="ðŸ”Œ Plugins" 
                                Command="{Binding OpenPluginsWindowCommand}"
                                Background="#3E3E42"
                                Foreground="White"
                                Padding="15,10"
                                Margin="0,0,0,10"
                                BorderThickness="0"/>

                <Button Content="ðŸ” Doublons" 
                        Command="{Binding OpenDuplicatesWindowCommand}"
                        Background="#FF6B6B"
                        Foreground="White"
                        Padding="15,10"
                        Margin="0,0,0,10"
                        BorderThickness="0"/>

                        <Separator Background="#3E3E42" Margin="0,10"/>

                        <TextBlock Text="Mode de recherche:" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding CurrentSearchMode, StringFormat='Mode: {0}'}" 
                                   FontSize="11"
                                   Foreground="#CCCCCC"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="3" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding FilesProcessed, StringFormat='Fichiers traitÃ©s: {0}'}" 
                               Foreground="#CCCCCC" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding ElapsedTime, StringFormat='Temps: {0:hh\\:mm\\:ss}'}" 
                               Foreground="#CCCCCC"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
