<Window x:Class="FindEdge.Presentation.Views.DuplicatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détection de doublons - FindEdge" 
        Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Détection de doublons intelligents" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Trouvez et gérez les fichiers en double pour libérer de l'espace" 
                           FontSize="12" 
                           Foreground="#CCCCCC" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Barre d'outils -->
        <Border Grid.Row="1" Background="#1E1E1E" Padding="15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Options de détection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Méthode:" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox SelectedItem="{Binding DetectionOptions.Method}" 
                              Width="120"
                              Background="#3C3C3C"
                              Foreground="White"
                              BorderBrush="#3E3E42">
                        <ComboBoxItem Content="Hash" Tag="Hash"/>
                        <ComboBoxItem Content="Contenu" Tag="Content"/>
                        <ComboBoxItem Content="Hybride" Tag="Hybrid"/>
                    </ComboBox>

                    <TextBlock Text="Taille min:" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="20,0,5,0"/>
                    <TextBox Text="{Binding DetectionOptions.MinFileSize}" 
                             Width="80"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#3E3E42"/>

                    <TextBlock Text="Taille max:" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="10,0,5,0"/>
                    <TextBox Text="{Binding DetectionOptions.MaxFileSize}" 
                             Width="80"
                             Background="#3C3C3C"
                             Foreground="White"
                             BorderBrush="#3E3E42"/>
                </StackPanel>

                <!-- Boutons d'action -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔍 Détecter" 
                            Command="{Binding DetectDuplicatesCommand}"
                            Background="#007ACC"
                            Foreground="White"
                            Padding="15,8"
                            Margin="5,0"
                            BorderThickness="0"/>

                    <Button Content="📊 Exporter" 
                            Command="{Binding ExportDuplicatesCommand}"
                            Background="#28A745"
                            Foreground="White"
                            Padding="15,8"
                            Margin="5,0"
                            BorderThickness="0"/>

                    <Button Content="🗑 Effacer" 
                            Command="{Binding ClearDuplicatesCommand}"
                            Background="#DC3545"
                            Foreground="White"
                            Padding="15,8"
                            Margin="5,0"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des groupes de doublons -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tête des doublons -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="{Binding DuplicateGroups.Count, StringFormat='{}{0} groupe(s) de doublons'}" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="{Binding TotalSpaceWasted, StringFormat='Espace gaspillé: {0:N0} octets'}" 
                                       Foreground="#CCCCCC"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Liste des groupes -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding DuplicateGroups}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        Margin="5" 
                                        Padding="10" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Type et confiance -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Type}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"
                                                       Foreground="White"/>
                                            <TextBlock Text="{Binding Confidence, StringFormat='({0:P})'}" 
                                                       FontSize="12"
                                                       Foreground="#CCCCCC"
                                                       Margin="5,0,0,0"/>
                                        </StackPanel>

                                        <!-- Nombre de fichiers et taille -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Files.Count, StringFormat='{}{0} fichiers'}" 
                                                       FontSize="11"
                                                       Foreground="#CCCCCC"
                                                       Margin="0,0,15,0"/>
                                            <TextBlock Text="{Binding TotalSize, StringFormat='Taille: {0:N0} octets'}" 
                                                       FontSize="11"
                                                       Foreground="#CCCCCC"/>
                                        </StackPanel>

                                        <!-- Espace gaspillé -->
                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="{Binding SpaceWasted, StringFormat='Espace gaspillé: {0:N0} octets'}" 
                                                   FontSize="10"
                                                   Foreground="#FF6B6B"
                                                   Margin="0,5,0,0"/>

                                        <!-- Bouton d'action -->
                                        <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                Content="👁 Voir"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#007ACC"
                                                Padding="10,5"
                                                Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Séparateur -->
            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch"/>

            <!-- Détails du groupe sélectionné -->
            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- En-tête des détails -->
                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <TextBlock Text="Détails du groupe" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>

                    <!-- Liste des fichiers du groupe -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding SelectedFiles}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        Margin="2" 
                                        Padding="8" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding FilePath}" 
                                                   FontSize="10"
                                                   Foreground="#CCCCCC"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0"/>

                                        <CheckBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Actions sur les fichiers sélectionnés -->
                    <Border Grid.Row="2" Background="#2D2D30" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                        <StackPanel>
                            <Button Content="🗑 Supprimer sélectionnés" 
                                    Command="{Binding DeleteSelectedCommand}"
                                    Background="#DC3545"
                                    Foreground="White"
                                    Padding="10,5"
                                    BorderThickness="0"
                                    Margin="0,0,0,5"/>
                            <TextBlock Text="Sélectionnez les fichiers à supprimer" 
                                       FontSize="10"
                                       Foreground="#CCCCCC"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="3" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding FilesProcessed, StringFormat='Fichiers traités: {0}'}" 
                               Foreground="#CCCCCC" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding ElapsedTime, StringFormat='Temps: {0:hh\\:mm\\:ss}'}" 
                               Foreground="#CCCCCC"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
