                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ContrÃ´les Collaboration -->
                    <GroupBox Grid.Row="0" Header="ContrÃ´les Collaboration" Margin="0,0,0,10">
                        <StackPanel>
                            <CheckBox Content="Activer la collaboration" 
