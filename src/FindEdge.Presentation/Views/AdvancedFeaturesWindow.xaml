                                    <DataTemplate>
                                        <Border Background="LightBlue" Padding="10" Margin="5">
                                            <TextBlock Text="{Binding}" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Collaboration -->
