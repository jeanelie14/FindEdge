                                   Padding="10,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Suggestions -->
                    <GroupBox Grid.Row="2" Header="Suggestions Intelligentes">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ListBox Grid.Column="0" 
                                    ItemsSource="{Binding SearchSuggestions}"
                                    Margin="0,0,5,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayText}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Query}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="Blue"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <ListBox Grid.Column="1" 
                                    ItemsSource="{Binding SearchResults}"
                                    Margin="5,0,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding FilePath}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text="{Binding RelevanceScore, StringFormat='Pertinence: {0:P2}'}" FontSize="10" Foreground="Green"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </GroupBox>

                    <!-- Status -->
                    <StatusBar Grid.Row="3">
                        <StatusBarItem>
                            <TextBlock Text="{Binding StatusMessage}"/>
                        </StatusBarItem>
                        <StatusBarItem>
                            <ProgressBar IsIndeterminate="{Binding IsLoading}" Width="100" Height="16"/>
                        </StatusBarItem>
