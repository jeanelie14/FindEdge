                    </GroupBox>

                    <!-- Recherche en Langage Naturel -->
                    <GroupBox Grid.Row="1" Header="Recherche en Langage Naturel" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBox x:Name="NaturalLanguageTextBox" 
                                    Text="{Binding NaturalLanguageQuery, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="14" 
                                    Padding="5"
                                    Margin="0,0,0,10"
                                    TextWrapping="Wrap"/>
