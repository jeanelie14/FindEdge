            </TabItem>

            <!-- Visualisation -->
            <TabItem Header="ðŸŽ¨ Visualisation">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
