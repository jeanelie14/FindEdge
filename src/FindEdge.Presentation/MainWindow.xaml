<Window x:Class="FindEdge.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FindEdge - Recherche de fichiers avancée" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barre de titre -->
        <Border Grid.Row="0" Background="#2D2D30" Height="40">
            <Grid>
                <TextBlock Text="FindEdge" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="15,0"/>
            </Grid>
        </Border>

        <!-- Barre de recherche -->
        <Border Grid.Row="1" Background="#1E1E1E" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         x:Name="SearchTextBox"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="16"
                         Padding="15,10"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#3E3E42"
                         BorderThickness="2"
                         VerticalContentAlignment="Center"/>

                <Button Grid.Column="1" 
                        Content="🔍 Rechercher" 
                        Command="{Binding SearchCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="20,10"
                        Margin="10,0"
                        BorderThickness="0"
/>

                <Button Grid.Column="2" 
                        Content="⏹ Arrêter" 
                        Command="{Binding StopSearchCommand}"
                        Background="#F14C4C"
                        Foreground="White"
                        Padding="15,10"
                        Margin="5,0"
                        BorderThickness="0"
/>

                <Button Grid.Column="3" 
                        Content="📚 Index" 
                        Background="#3E3E42"
                        Foreground="White"
                        Padding="15,10"
                        Margin="5,0"
                        BorderThickness="0"
                        Command="{Binding OpenIndexWindowCommand}"/>

                <Button Grid.Column="4" 
                        Content="🔌 Plugins" 
                        Background="#3E3E42"
                        Foreground="White"
                        Padding="15,10"
                        Margin="5,0"
                        BorderThickness="0"
                        Command="{Binding OpenPluginsWindowCommand}"/>

                <!-- Bouton de doublons -->
                <Button Grid.Column="5" 
                        Content="🔍 Doublons" 
                        Background="#FF6B6B"
                        Foreground="White"
                        Padding="15,10"
                        Margin="5,0"
                        BorderThickness="0"
                        Command="{Binding OpenDuplicatesWindowCommand}"/>
            </Grid>
        </Border>

        <!-- Zone de contenu principal -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Liste des résultats -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="{Binding SearchResults.Count, StringFormat='{}{0} résultat(s) trouvé(s)'}" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="📄 CSV" 
                                        Command="{Binding ExportCsvCommand}"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Foreground="White"
                                        Margin="5,0"/>
                                <Button Content="🗑 Effacer" 
                                        Command="{Binding ClearResultsCommand}"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Foreground="White"
                                        Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding SearchResults}"
                              Background="Transparent"
                              BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        Margin="5" 
                                        Padding="10" 
                                        BorderBrush="#3E3E42" 
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding FileName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding Directory}" 
                                                   FontSize="11"
                                                   Foreground="#CCCCCC"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,2,0,0"/>

                                        <StackPanel Grid.Row="2" Grid.Column="0"
                                                    Orientation="Horizontal" 
                                                    Margin="0,5,0,0">
                                            <TextBlock Text="{Binding FileSize, StringFormat='{}{0:N0} octets'}" 
                                                       FontSize="10"
                                                       Foreground="#CCCCCC"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding LastModified, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" 
                                                       FontSize="10"
                                                       Foreground="#CCCCCC"/>
                                        </StackPanel>

                                        <Border Grid.Row="0" Grid.Column="1"
                                                Background="#007ACC" 
                                                Padding="5,2" 
                                                Margin="10,0,0,0">
                                            <TextBlock Text="{Binding MatchType}" 
                                                       FontSize="10" 
                                                       Foreground="White" 
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Background="#3E3E42" HorizontalAlignment="Stretch"/>

            <Border Grid.Column="2" Background="#1E1E1E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="10" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                        <TextBlock Text="Aperçu" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="10">
                        <TextBlock Text="Sélectionnez un fichier pour voir son contenu" 
                                   Foreground="#CCCCCC"
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Barre de statut -->
        <Border Grid.Row="3" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="15,8">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding FilesProcessed, StringFormat='Fichiers traités: {0}'}" 
                               Foreground="#CCCCCC" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding ElapsedTime, StringFormat='Temps: {0:hh\\:mm\\:ss}'}" 
                               Foreground="#CCCCCC"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>