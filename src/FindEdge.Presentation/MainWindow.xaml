<Window x:Class="FindEdge.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FindEdge Professional - Recherche: {Binding SearchTerm} dans {Binding SearchPath}" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E1E1E1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C1C1C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="StopButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Tab Style -->
        <Style x:Key="SearchTab" TargetType="TabItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Background" Value="#E8E8E8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <MenuItem Header="Fichier">
                <MenuItem Header="Nouveau" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Ouvrir" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Enregistrer" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="Exporter les résultats..."/>
                <Separator/>
                <MenuItem Header="Quitter" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="Édition">
                <MenuItem Header="Annuler" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="Rétablir" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Copier" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Sélectionner tout" InputGestureText="Ctrl+A"/>
            </MenuItem>
            <MenuItem Header="Recherche">
                <MenuItem Header="Rechercher" InputGestureText="F3"/>
                <MenuItem Header="Rechercher suivant" InputGestureText="F3"/>
                <MenuItem Header="Rechercher précédent" InputGestureText="Shift+F3"/>
                <Separator/>
                <MenuItem Header="Arrêter la recherche" InputGestureText="Escape"/>
            </MenuItem>
            <MenuItem Header="Affichage">
                <MenuItem Header="Détails"/>
                <MenuItem Header="Liste"/>
                <MenuItem Header="Aperçu"/>
                <Separator/>
                <MenuItem Header="Plein écran" InputGestureText="F11"/>
            </MenuItem>
            <MenuItem Header="Outils">
                <MenuItem Header="Gestionnaire d'index..."/>
                <MenuItem Header="Gestionnaire de plugins..."/>
                <MenuItem Header="Recherche de doublons..."/>
                <Separator/>
                <MenuItem Header="Options..."/>
            </MenuItem>
            <MenuItem Header="Aide">
                <MenuItem Header="Aide" InputGestureText="F1"/>
                <MenuItem Header="À propos de FindEdge..."/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Background="#F5F5F5">
            <ToolBar>
                <Button Content="📄" ToolTip="Nouveau" Style="{StaticResource ToolbarButton}"/>
                <Button Content="📂" ToolTip="Ouvrir" Style="{StaticResource ToolbarButton}"/>
                <Button Content="💾" ToolTip="Enregistrer" Style="{StaticResource ToolbarButton}"/>
                <Separator/>
                <Button Content="✂️" ToolTip="Couper" Style="{StaticResource ToolbarButton}"/>
                <Button Content="📋" ToolTip="Copier" Style="{StaticResource ToolbarButton}"/>
                <Button Content="📌" ToolTip="Coller" Style="{StaticResource ToolbarButton}"/>
                <Separator/>
                <Button Content="▶️" ToolTip="Rechercher" Command="{Binding SearchCommand}" Style="{StaticResource ToolbarButton}"/>
                <Button Content="⏹️" ToolTip="Arrêter" Command="{Binding StopSearchCommand}" Style="{StaticResource ToolbarButton}"/>
                <Separator/>
                <Button Content="📋" ToolTip="Détails" Style="{StaticResource ToolbarButton}"/>
                <Button Content="📄" ToolTip="Liste" Style="{StaticResource ToolbarButton}"/>
                <Button Content="👁️" ToolTip="Aperçu" Style="{StaticResource ToolbarButton}"/>
                <Separator/>
                <Button Content="❓" ToolTip="Aide" Style="{StaticResource ToolbarButton}"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Search Configuration -->
            <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Tabs -->
                    <TabControl Grid.Row="0" Background="#F0F0F0" BorderThickness="0">
                        <TabItem Header="Recherche" Style="{StaticResource SearchTab}">
                            <TabItem.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Recherche"/>
                                        <Button Content="✕" Margin="5,0,0,0" Width="16" Height="16" 
                                                Background="Transparent" BorderThickness="0" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </TabItem.HeaderTemplate>
                        </TabItem>
                    </TabControl>

                    <!-- Search Configuration -->
                    <TabControl Grid.Row="1" Background="White">
                        <TabItem Header="Principal">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                <StackPanel>
                                    <!-- File Name -->
                                    <TextBlock Text="Nom fichier:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox Style="{StaticResource SearchTextBox}" Margin="0,0,0,15"/>

                                    <!-- Text Content -->
                                    <TextBlock Text="Contenant texte:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding SearchTerm}" Style="{StaticResource SearchTextBox}" Margin="0,0,0,15"/>

                                    <!-- Search Location -->
                                    <TextBlock Text="Examiner:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,15">
                                        <TextBox Text="{Binding SearchPath}" Style="{StaticResource SearchTextBox}" Margin="0,0,5,0"/>
                                        <Button Content="📁" Width="25" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0"/>
                                    </Grid>

                                    <!-- File Size -->
                                    <TextBlock Text="Taille (Ko):" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="&lt;" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="1" Text="0" Style="{StaticResource SearchTextBox}" Margin="0,0,5,0"/>
                                        <TextBlock Grid.Column="2" Text="&gt;" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBox Grid.Column="3" Text="0" Style="{StaticResource SearchTextBox}"/>
                                    </Grid>

                                    <!-- Modification Date -->
                                    <TextBlock Text="Modifiés:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Après" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="Aujourd'hui" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <Button Content="Avant" Style="{StaticResource ToolbarButton}" Margin="0,0,5,0"/>
                                        <Button Content="Aujourd'hui" Style="{StaticResource ToolbarButton}"/>
                                    </StackPanel>

                                    <!-- Search Options -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <ComboBox Width="80" Margin="0,0,10,0">
                                            <ComboBoxItem Content="Expert"/>
                                        </ComboBox>
                                        <Button Content="Aa" Style="{StaticResource ToolbarButton}" Margin="0,0,5,0"/>
                                        <Button Content="?" Style="{StaticResource ToolbarButton}" Margin="0,0,10,0"/>
                                        <CheckBox Content="Sous-dossi..." IsChecked="{Binding IncludeSubfolders}"/>
                                    </StackPanel>

                                    <!-- Search Buttons -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Chercher" Command="{Binding SearchCommand}" Style="{StaticResource SearchButton}" Margin="0,0,10,0"/>
                                        <Button Content="Arrêt" Command="{Binding StopSearchCommand}" Style="{StaticResource StopButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Options">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Options de recherche" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <CheckBox Content="Sensible à la casse" IsChecked="{Binding CaseSensitive}" Margin="0,0,0,5"/>
                                    <CheckBox Content="Mots entiers seulement" IsChecked="{Binding WholeWordsOnly}" Margin="0,0,0,5"/>
                                    <CheckBox Content="Inclure les sous-dossiers" IsChecked="{Binding IncludeSubfolders}" Margin="0,0,0,5"/>
                                    <CheckBox Content="Recherche binaire" Margin="0,0,0,5"/>
                                    <CheckBox Content="Expressions régulières" Margin="0,0,0,5"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Dates">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Filtres de date" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Date de modification:" Margin="0,0,0,5"/>
                                    <DatePicker Margin="0,0,0,10"/>
                                    <TextBlock Text="Date de création:" Margin="0,0,0,5"/>
                                    <DatePicker Margin="0,0,0,10"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" Background="#CCCCCC" HorizontalAlignment="Stretch"/>

            <!-- Center Panel - Results -->
            <Border Grid.Column="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Results Header -->
                    <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="5">
                        <TextBlock Text="{Binding SearchResults.Count, StringFormat='{}{0} résultats trouvés'}" 
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- Results List -->
                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding SearchResults}"
                              Background="White"
                              BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Nom" Width="200" DisplayMemberBinding="{Binding FileName}"/>
                                <GridViewColumn Header="Emplacement" Width="300" DisplayMemberBinding="{Binding FilePath}"/>
                                <GridViewColumn Header="Taille" Width="80" DisplayMemberBinding="{Binding FileSize, StringFormat='{}{0:N0} Ko'}"/>
                                <GridViewColumn Header="Conc..." Width="60" DisplayMemberBinding="{Binding MatchCount}"/>
                                <GridViewColumn Header="Type" Width="80" DisplayMemberBinding="{Binding FileType}"/>
                                <GridViewColumn Header="Modifié" Width="120" DisplayMemberBinding="{Binding LastModified, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                <GridViewColumn Header="Créé" Width="120" DisplayMemberBinding="{Binding CreatedDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="3" Background="#CCCCCC" HorizontalAlignment="Stretch"/>

            <!-- Right Panel - Statistics -->
            <Border Grid.Column="4" Background="White">
                <TabControl>
                    <TabItem Header="Sommaire">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <StackPanel>
                                <TextBlock Text="Statistiques de recherche" FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Trouvé:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SearchResults.Count, StringFormat='{}{0} éléments (0.00 Ko)'}" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Vérifié:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding FilesProcessed, StringFormat='{}{0} éléments (0.00 Ko)'}" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="État:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding StatusMessage}" Margin="0,0,0,10"/>
                                
                                <Separator Margin="0,10,0,10"/>
                                
                                <TextBlock Text="Actions rapides" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Button Content="📁 Ouvrir le dossier" Style="{StaticResource ToolbarButton}" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                                <Button Content="🔍 Rechercher les doublons" Command="{Binding OpenDuplicatesWindowCommand}" Style="{StaticResource ToolbarButton}" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                                <Button Content="📊 Exporter" Command="{Binding ExportCsvCommand}" Style="{StaticResource ToolbarButton}" HorizontalAlignment="Stretch" Margin="0,0,0,5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    
                    <TabItem Header="Concordances">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <TextBlock Text="Aperçu des correspondances sera affiché ici" FontStyle="Italic" Foreground="Gray"/>
                        </ScrollViewer>
                    </TabItem>
                    
                    <TabItem Header="Rapports">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <TextBlock Text="Rapports de recherche seront générés ici" FontStyle="Italic" Foreground="Gray"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Prêt" Margin="0,0,20,0"/>
                    <TextBlock Text="CAP NUM SCR" Foreground="Gray"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>