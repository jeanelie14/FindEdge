<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Couleurs du thème -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="SecondaryColor">#106EBE</Color>
    <Color x:Key="AccentColor">#0078D4</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F8F9FA</Color>
    <Color x:Key="TextColor">#323130</Color>
    <Color x:Key="TextSecondaryColor">#605E5C</Color>
    <Color x:Key="BorderColor">#CCCCCC</Color>
    <Color x:Key="ErrorColor">#D13438</Color>
    <Color x:Key="WarningColor">#FF8C00</Color>
    <Color x:Key="SuccessColor">#107C10</Color>
    <Color x:Key="InfoColor">#0078D4</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0078D4" Offset="0"/>
        <GradientStop Color="#106EBE" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SurfaceGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F8F9FA" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Typography -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>
    
    <sys:Double x:Key="SmallFontSize">12</sys:Double>
    <sys:Double x:Key="NormalFontSize">14</sys:Double>
    <sys:Double x:Key="LargeFontSize">16</sys:Double>
    <sys:Double x:Key="ExtraLargeFontSize">20</sys:Double>
    <sys:Double x:Key="TitleFontSize">24</sys:Double>
    
    <!-- Spacing -->
    <sys:Double x:Key="SmallSpacing">5</sys:Double>
    <sys:Double x:Key="NormalSpacing">10</sys:Double>
    <sys:Double x:Key="LargeSpacing">15</sys:Double>
    <sys:Double x:Key="ExtraLargeSpacing">20</sys:Double>
    
    <!-- Corner Radius -->
    <sys:Double x:Key="SmallCornerRadius">3</sys:Double>
    <sys:Double x:Key="NormalCornerRadius">5</sys:Double>
    <sys:Double x:Key="LargeCornerRadius">8</sys:Double>
    
    <!-- Shadows -->
    <DropShadowEffect x:Key="SmallShadow" Color="Black" Opacity="0.1" BlurRadius="3" ShadowDepth="1"/>
    <DropShadowEffect x:Key="NormalShadow" Color="Black" Opacity="0.15" BlurRadius="5" ShadowDepth="2"/>
    <DropShadowEffect x:Key="LargeShadow" Color="Black" Opacity="0.2" BlurRadius="8" ShadowDepth="3"/>
    
    <!-- Styles de base -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
    </Style>
    
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
    </Style>
    
    <!-- Styles pour les icônes -->
    <Style x:Key="IconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- Styles pour les badges -->
    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="MinWidth" Value="20"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <Style x:Key="BadgeTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Styles pour les cartes -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource NormalCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource NormalSpacing}"/>
        <Setter Property="Margin" Value="{StaticResource SmallSpacing}"/>
        <Setter Property="Effect" Value="{StaticResource SmallShadow}"/>
    </Style>
    
    <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,{StaticResource NormalSpacing}"/>
    </Style>
    
    <Style x:Key="CardContentStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <!-- Styles pour les listes -->
    <Style x:Key="ListStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style x:Key="ListItemStyle" TargetType="ListBoxItem">
        <Setter Property="Padding" Value="{StaticResource NormalSpacing}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Styles pour les grilles -->
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
    </Style>
    
    <Style x:Key="GridHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SmallSpacing}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    </Style>
    
    <Style x:Key="GridCellStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Padding" Value="{StaticResource SmallSpacing}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Styles pour les animations -->
    <Style x:Key="FadeInAnimation" TargetType="FrameworkElement">
        <Style.Triggers>
            <Trigger Property="IsLoaded" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                           From="0" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="SlideInAnimation" TargetType="FrameworkElement">
        <Style.Triggers>
            <Trigger Property="IsLoaded" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X" 
                                           From="-100" To="0" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Styles pour les états -->
    <Style x:Key="LoadingStateStyle" TargetType="FrameworkElement">
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="IsEnabled" Value="False"/>
    </Style>
    
    <Style x:Key="ErrorStateStyle" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="SuccessStateStyle" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="WarningStateStyle" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="InfoStateStyle" TargetType="Control">
        <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
</ResourceDictionary>
